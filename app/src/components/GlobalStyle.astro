<style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    .light {
        background: #FAFAFA;
        color: #212121;
    }

    .dark {
        background: #212121;
        color: #FAFAFA;
    }

    @media (max-width: 768px) {
        #wrapper {
            width: 90vw;
        }
    }

    @media (min-width: 768px) {
        #wrapper {
            min-width: 692px;
            width: 75vw;
        }
    }

    #wrapper {
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 30px;
        font-family: -apple-system, Roboto, Arial, YuGothic, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'MigMix 1P', 'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
        letter-spacing: 1px;
        word-break: break-all;
    }

    h1, h2, h3, h4, h5, h6 {
        margin-inline-start: 0;
        margin-inline-end: 0;
        font-weight: bold;
    }

    h1 {
        font-size: 2rem;
        border-bottom: 3px double;
        margin-block-start: 0.67em;
        margin-block-end: 0.67em;
    }

    h2 {
        font-size: 1.5rem;
        border-bottom: 1px dotted;
        margin-block-start: 0.83em;
        margin-block-end: 0.83em;
    }

    h3 {
        font-size: 1.17rem;
        border-bottom: 1px dashed;
        margin-block-start: 1em;
        margin-block-end: 1em;
    }

    h4 {
        font-size: 1.00rem;
        margin-block-start: 1.33em;
        margin-block-end: 1.33em;
    }

    h5 {
        font-size: 0.83em;
        margin-block-start: 1.67em;
        margin-block-end: 1.67em;
    }

    h6 {
        font-size: 0.67rem;
        margin-block-start: 2.33em;
        margin-block-end: 2.33em;
    }

    /* モバイルで文字が大きすぎたので調整 */
    @media (max-width: 768px) {
        h1 { font-size: 1.5rem; }
        h2 { font-size: 1.25rem; }
        h3 { font-size: 1.125rem; }
    }

    hr {
        margin: 15px 75px;
        border: unset;
        border-top: dashed 1px;
    }

    blockquote {
        border: dashed 1px;
        padding: 16px;
    }

    pre {
        font-family: monospace, monospace;
        white-space: pre;
        margin: 1em 0;
    }

    code {
        font-family: Hack, monospace;
    }

    pre code {
        overflow-x: auto;
        display: block;
        background: #2b2b2b;
        padding: 1em;
    }

    table {
        border-collapse: collapse;
    }

    ul {
        display: block;
        list-style-type: disc;
        margin-block-start: 1em;
        margin-block-end: 1em;
        padding-inline-start: 2em;
    }

    /* モバイルのときに横幅を節約したかったので調整 */
    @media (max-width: 768px) {
        ul {
            padding-inline-start: 1em;
        }
    }

    ul ul {
        list-style-type: circle;
        margin-block-start: 0;
        margin-block-end: 0;
    }

    ol {
        list-style-type: decimal;
        margin-block-start: 1em;
        margin-block-end: 1em;
        padding-inline-start: 40px;
    }

    th, td {
        border-bottom: 1px currentColor solid;
        padding: 12px 18px;
        margin: 0;
    }

    /* モバイルのときに全く読めないので調整 */
    @media (max-width: 768px) {
        table {
            font-size: 0.75rem;
        }

        th, td {
            padding: 4px;
        }
    }

    a {
        color: #0000EE;
        text-decoration-line: underline;
    }

    a:visited {
        color: #551A8B;
    }

    .dark a {
        color: #2196F3;
    }

    .dark a:visited {
        color: #00BCD4;
    }
</style>
